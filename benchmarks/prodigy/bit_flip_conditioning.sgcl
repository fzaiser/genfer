# true EV: 1.254...
# true tail: 0.5^n

i := 0;
b1 ~ Bernoulli(1/2);
b2 ~ Bernoulli(1/2);
b3 ~ Bernoulli(1/2);
b4 ~ Bernoulli(1/2);

while (! ((b1 = 0) and (b2 = 0))) {
    b1 ~ Bernoulli(1/2);
    b2 ~ Bernoulli(1/2);
    observe ( (b1 = 0 and b3 = 0) or (b1 = 1 and b3 = 1) or (b2 = 0 and b4 = 0) or (b2 = 1 and b4 = 1) );
    b3 := b1;
    b4 := b2;
    i += 1;
}

return i;

