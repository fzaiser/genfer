# Adapted from https://github.com/LKlinke/Prodigy/blob/main/pgfexamples/inference/grass.pgcl

cloudy ~ Bernoulli(0.5);

if (cloudy = 1){
    rain ~ Bernoulli(0.8);
    sprinkler ~ Bernoulli(0.1);
}else{
    rain ~ Bernoulli(0.2);
    sprinkler ~ Bernoulli(0.5);
}

temp1 ~ Bernoulli(0.7);
if (temp1 = 1 && rain = 1){wetRoof := 1;}
temp2 ~ Bernoulli(0.9);
temp3 ~ Bernoulli(0.9);
if ((temp2 = 1 && rain =1) || (temp3 = 1 && sprinkler = 1)){
    wetGrass := 1;
} else {wetGrass := 0;}

observe(wetGrass = 1);

return rain;

